@model CurrencyApp.Pages.ItemsModel

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th id="nameH" class="text-center"><a class="navbar-brand tableTextColor" asp-page-handler="Sort" asp-route-sortOption="@Model.SortName">Nazwa</a></th>
            <th id="dateH" class="text-center"><a class="navbar-brand tableTextColor" asp-page-handler="Sort" asp-route-sortOption="@Model.SortDate">Data</a></th>
            <th id="priceH" class="text-center"><a class="navbar-brand tableTextColor" asp-page-handler="Sort" asp-route-sortOption="@Model.SortPrice">Cena</a></th>
            <th id="currencyFH" class="text-center"><a class="navbar-brand tableTextColor" asp-page-handler="Sort" asp-route-sortOption="@Model.SortCurrency">Waluta</a></th>
            <th id="rateH" class="text-center"><a class="navbar-brand tableTextColor" asp-page-handler="Sort" asp-route-sortOption="@Model.SortRate">Kurs</a></th>
            <th id="priceCH" class="text-center"><a class="navbar-brand tableTextColorNH">Cena po przeliczeniu</a></th>
            <th id="dateTH" class="text-center"><a class="navbar-brand tableTextColorNH">Data tabeli</a></th>
            <th id="currencyTH" class="text-center"><a class="navbar-brand tableTextColorNH">Waluta docelowa</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="sortable">
        @{int counter = 0; }
        @foreach (var item in Model.TableI.Items)
        {
            <tr id="item-@counter" class="listHover">
                <td id="nameR" class="text-center nameR">@item.Name</td>
                <td id="dateR" class="text-center dateR">@item.Date</td>
                <td id="priceR" class="text-center priceR">@item.Price</td>
                <td id="currencyFR" class="text-center currencyFR">@item.CurrencyFrom</td>
                <td id="rateR" class="text-center rateR">@item.Rate</td>
                <td id="priceCR" class="text-center priceCR">@item.ConvertedPrice</td>
                @if (item.DateTable.Equals(item.Date))
                {
                    <td id="dateTR" class="text-center dateTR">@item.DateTable.ToString("yyyy-MM-dd")</td>
                }
                else
                {
                    <td id="dateTR" class="bgDangerColorNH text-center dateTR">@item.DateTable.ToString("yyyy-MM-dd")</td>
                }
                <td id="currencyTR" class="text-center currencyTR">@item.CurrencyTo</td>
                <td>
                    <form method="post">
                        <button type="submit" asp-page-handler="DeleteItem" asp-route-id=@counter class="btn btn-danger delete">Usuń</button>
                    </form>
                </td>
            </tr>
            counter++;
        }
    </tbody>
</table>